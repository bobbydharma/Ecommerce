<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecommerce" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">?attr/colorSurfaceContainerLowest</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">?attr/colorSurfaceContainerLowest</item>
    </style>

    <style name="Theme.Ecommerce" parent="Base.Theme.Ecommerce" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_image</item>
        <item name="windowSplashScreenAnimationDuration">100000</item>
        <item name="postSplashScreenTheme">@style/Theme.Ecommerce</item>
    </style>

    <style name="FullScreenDialog" parent="Base.Theme.Ecommerce">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/TextAppearance.App.BodyMedium</item>
    </style>

    <style name="CardBackgroundColor" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerLowest</item>
    </style>

</resources>