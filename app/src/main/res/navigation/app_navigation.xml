    <fragment
        android:id="@+id/detailProductFragment3"
        android:name="com.example.ecommerce.ui.main.detail.compose.DetailProductComposeFragment"
        android:label="DetailProductComposeFragment">

        <argument
            android:name="id_product"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_detailProductFragment3_to_ulasanPembeliFragment2"
            app:destination="@id/reviewComposeFragment" />
        <action
            android:id="@+id/action_detailProductFragment3_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />

        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="true"
            app:uri="http://com.example.ecommerce.ui.main.detail/{id_product}" />
        <action
            android:id="@+id/action_detailProductFragment3_to_main_navigation"
            app:destination="@id/main_navigation" />

    </fragment>
    <fragment
        android:id="@+id/reviewComposeFragment"
        android:name="com.example.ecommerce.ui.main.detail.compose.ReviewComposeFragment"
        android:label="ReviewComposeFragment">
        <argument
            android:name="id_product_review"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.ecommerce.ui.main.notifcation.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/screenFragment"
        android:name="com.example.ecommerce.screen.ScreenFragment"
        android:label="ScreenFragment" />


