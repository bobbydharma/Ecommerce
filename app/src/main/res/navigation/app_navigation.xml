    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.ecommerce.ui.main.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />
        <argument
            android:name="CheckoutList"
            app:argType="com.example.ecommerce.core.model.checkout.CheckoutList" />
    </fragment>
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.ecommerce.ui.main.checkout.CheckoutFragment"
        android:label="fragment_checkout"
        tools:layout="@layout/fragment_checkout">
        <action
            android:id="@+id/action_checkoutFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
        <action
            android:id="@+id/action_checkoutFragment_to_sendReviewFragment"
            app:destination="@id/sendReviewFragment"
            app:popUpTo="@navigation/main_navigation" />
        <argument
            android:name="FulfillmentResponse"
            app:argType="com.example.ecommerce.core.model.checkout.Data" />
        <argument
            android:name="SourceFragment"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.ecommerce.ui.main.payment.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment">
        <action
            android:id="@+id/action_paymentFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />
        <argument
            android:name="itemPayment"
            app:argType="com.example.ecommerce.core.model.transaction.Item" />
    </fragment>
    <fragment
        android:id="@+id/sendReviewFragment"
        android:name="com.example.ecommerce.ui.main.sendreview.SendReviewFragment"
        android:label="fragment_send_review"
        tools:layout="@layout/fragment_send_review">
